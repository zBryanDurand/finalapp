<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp">

        <View
            android:id="@+id/borderView"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLabelFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Fecha:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/borderView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="..."
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/txtLabelFecha"
            app:layout_constraintTop_toTopOf="@id/txtLabelFecha" />

        <TextView
            android:id="@+id/txtLabelEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Estado:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txtFecha"
            app:layout_constraintTop_toTopOf="@id/txtFecha" />

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="..."
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/txtLabelEstado"
            app:layout_constraintTop_toTopOf="@id/txtLabelEstado" />

        <TextView
            android:id="@+id/txtLabelCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Curso:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txtLabelFecha"
            app:layout_constraintTop_toBottomOf="@id/txtLabelFecha" />

        <TextView
            android:id="@+id/txtCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="..."
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/txtLabelCurso"
            app:layout_constraintTop_toTopOf="@id/txtLabelCurso" />

        <TextView
            android:id="@+id/txtLabelMotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Motivo:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txtLabelFecha"
            app:layout_constraintTop_toBottomOf="@id/txtLabelCurso" />

        <TextView
            android:id="@+id/txtMotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="..."
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/txtLabelMotivo"
            app:layout_constraintTop_toTopOf="@id/txtLabelMotivo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
